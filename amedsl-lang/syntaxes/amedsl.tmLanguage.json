{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Asset Modelling Engine DSL",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.amedsl",
          "match": "\\b(define|of|with|end|name|description|symbol|components|table|base|algorithm|asset_strategy|asset_class|asset|descriptor|failure_mode|condition_indicator|stress_factor|unit_of_measure|unit_family|text|number|quantity)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.amedsl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.amedsl",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash",
          "match": "//.*$"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.class",
          "match": "[^\\d\\W]\\w*\\b"
        }
      ]
    }
  },
  "scopeName": "source.ame"
}
